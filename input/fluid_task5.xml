<?xml version="1.0" encoding="UTF-8"?>
<parameters xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="parameters.xsd">

  <!-- Output Parameters -->
  <outputParameters>
    <baseName>out</baseName>
    <writeFrequency>100</writeFrequency>
    <checkpointOutputFileName>fluid_task5_checkpoint.txt</checkpointOutputFileName>
  </outputParameters>

  <!-- Simulation Parameters -->
  <simulationParameters>
    <tEnd>150</tEnd>
    <deltaT>0.001</deltaT>
    <cutOffRadius>2.3</cutOffRadius>                                          
    <cellSize>2.3</cellSize>
    <forceType>
      <smoothedLJ>
        <r_l>1.9</r_l>
      </smoothedLJ>
    </forceType>
    <Thermostats>
        <initTemp>0.01</initTemp>
        <targetTemp>3.0</targetTemp>
        <thermoStatFrequency>40</thermoStatFrequency>
        <maxTempDiff>0.001</maxTempDiff>
      </Thermostats>
    <boundaryConditions>
        <boundaryConditionsPositiveZ>periodic</boundaryConditionsPositiveZ>
        <boundaryConditionsNegativeZ>periodic</boundaryConditionsNegativeZ>
        <boundaryConditionsPositiveX>periodic</boundaryConditionsPositiveX>
        <boundaryConditionsNegativeX>periodic</boundaryConditionsNegativeX>
        <boundaryConditionsPositiveY>periodic</boundaryConditionsPositiveY>
        <boundaryConditionsNegativeY>periodic</boundaryConditionsNegativeY>
      </boundaryConditions>
    <domainDimensions> 
      <x>9.2</x>
      <y>9.2</y>
      <z>9.2</z>
    </domainDimensions>
  </simulationParameters>



  <!-- Cuboids -->
  <cuboids>
    <position>
      <x>0.575</x>
      <y>0.575</y>
      <z>0.575</z>
    </position>
    <velocity>
      <x>0</x>
      <y>0</y>
      <z>0</z>
    </velocity>
    <dimensions>
      <x>8</x>
      <y>8</y>
      <z>8</z>
    </dimensions>
    <mass>1</mass>
    <meshWidth>1.15</meshWidth>
    <sigma>1.0</sigma>
    <epsilon>1.0</epsilon>
  </cuboids>


  <!-- Spheres -->


  <!-- Add arbitrarily many spheres here  -->

</parameters>
