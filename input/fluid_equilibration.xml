<?xml version="1.0" encoding="UTF-8"?>
<parameters xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="parameters.xsd">

  <!-- Output Parameters -->
  <outputParameters>
    <baseName>out</baseName>
    <writeFrequency>10</writeFrequency>
    <checkpointOutputFileName>fluid_checkpoint.txt</checkpointOutputFileName>
  </outputParameters>

  <!-- Simulation Parameters -->
  <simulationParameters>
    <tEnd>15</tEnd>
    <deltaT>0.0005</deltaT>
    <cutOffRadius>3.0</cutOffRadius>                                          
    <cellSize>3.0</cellSize>
    <gravityFactor>-12.44</gravityFactor>
    <Thermostats>
        <initTemp>0.5</initTemp>
        <thermoStatFrequency>1000</thermoStatFrequency>
      </Thermostats>
    <boundaryConditions>
        <boundaryConditionsPositiveZ>reflective</boundaryConditionsPositiveZ>
        <boundaryConditionsNegativeZ>reflective</boundaryConditionsNegativeZ>
        <boundaryConditionsPositiveX>reflective</boundaryConditionsPositiveX>
        <boundaryConditionsNegativeX>reflective</boundaryConditionsNegativeX>
        <boundaryConditionsPositiveY>reflective</boundaryConditionsPositiveY>
        <boundaryConditionsNegativeY>reflective</boundaryConditionsNegativeY>
      </boundaryConditions>
    <domainDimensions> 
      <x>303</x>
      <y>180</y>
      <z>1</z>
    </domainDimensions>
  </simulationParameters>



  <!-- Cuboids -->
  <cuboids>
    <position>
      <x>1.5</x>
      <y>2</y>
      <z>0</z>
    </position>
    <velocity>
      <x>0</x>
      <y>0</y>
      <z>0</z>
    </velocity>
    <dimensions>
      <x>250</x>
      <y>50</y>
      <z>1</z>
    </dimensions>
    <mass>1</mass>
    <meshWidth>1.2</meshWidth>
    <sigma>1.2</sigma>
    <epsilon>1.0</epsilon>
  </cuboids>


  <!-- Spheres -->


  <!-- Add arbitrarily many spheres here  -->

</parameters>
