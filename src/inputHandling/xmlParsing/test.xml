<?xml version="1.0" encoding="UTF-8"?>
<parameters xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="parameters.xsd">

  <!-- Output Parameters -->
  <outputParameters>
    <baseName>output_file</baseName>
    <writeFrequency>5</writeFrequency>
  </outputParameters>

  <!-- Simulation Parameters -->
  <simulationParameters>
    <tEnd>100.0</tEnd>
    <deltaT>0.01</deltaT>
    <boundaryConditions>outflow</boundaryConditions>
    <domainDimensions> 
      <x>5.5</x>
      <y>5.0</y>
      <z>5.5</z>
    </domainDimensions>
    <!-- Add other simulation parameters here if needed -->
  </simulationParameters>

  <!-- Cuboids -->
  <cuboids>
    <position>
      <x>1.0</x>
      <y>2.0</y>
      <z>3.0</z>
    </position>
    <velocity>
      <x>0.5</x>
      <y>-0.5</y>
      <z>1.0</z>
    </velocity>
    <dimensions>
      <x>2.0</x>
      <y>2.0</y>
      <z>2.0</z>
    </dimensions>
    <mass>5.0</mass>
    <meshWidth>0.1</meshWidth>
    <sigma>1.5</sigma>
    <epsilon>0.8</epsilon>
  </cuboids>

  <!-- Spheres -->
  <spheres>
    <center_position>
      <x>-1.0</x>
      <y>0.0</y>
      <z>2.0</z>
    </center_position>
    <velocity>
      <x>0.2</x>
      <y>0.8</y>
      <z>-0.3</z>
    </velocity>
    <mass>3.0</mass>
    <radius>1.5</radius>
    <meshWidth>0.2</meshWidth>
    <sigma>2.0</sigma>
    <epsilon>1.0</epsilon>
  </spheres>

  <!-- Add more cuboids or spheres if needed -->

</parameters>
